package com.bo.elements{	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;		public class MyLoadingSprite extends Sprite	{		private var shareBlog:ShareBlog;		private var back:Sprite;		private var txt:TextField;		private var tf:TextFormat=new TextFormat();		public function MyLoadingSprite(){		}		public function show():void{			if(!shareBlog)shareBlog=new ShareBlog();			back=new Sprite();			back.graphics.beginFill(0x000000,0.5);			back.graphics.drawRect(0,0,Global.appWidth,50);			back.graphics.endFill();						addChild(back);			shareBlog.width=30;			shareBlog.height=30;			shareBlog.x=Global.appWidth/2-shareBlog.width/2-20;			shareBlog.y=25;			back.addChild(shareBlog);						txt=new TextField();			tf.color=0xffffff;			tf.size=15;			tf.font="Arial";			txt.defaultTextFormat=tf;			txt.setTextFormat(tf);			txt.text="分享处理中";			txt.selectable=false;			txt.x=shareBlog.x+shareBlog.width-10;			txt.height=22;			txt.y=15;			back.addChild(txt);						if(!Global.main.contains(this))Global.main.addChild(this);			Global.mps.mediaPlayer.play();			//Global._smgbbplayer.onToggle(null);		}		public function setTitle(val:String):void{			txt.text=val;		}		public function hide():void{			if(shareBlog){				back.removeChild(shareBlog);				shareBlog=null;			}			if(txt){				back.removeChild(txt);				txt=null;			}			if(back){				removeChild(back);				back=null;			}			if(Global.main.contains(this))Global.main.removeChild(this);		}	}}