package com.bo.elements {	import flash.display.Sprite;	import flash.utils.getDefinitionByName;		public class DarkbuttonBase extends Sprite{		private var selectedsprite:Sprite=new DarkControlBarBgSelected();		protected var buttonstatus:Boolean=false;		public function DarkbuttonBase() {			// constructor code			addChild(selectedsprite);			trace(selectedsprite.width+"::"+selectedsprite.height);			selectedsprite.alpha=0;		}		public function init(ico:String):void{			var iconclass:Class=getDefinitionByName(ico)as Class;			var iconsprite:Sprite=new iconclass();			trace(iconsprite.width+"::"+iconsprite.height);			iconsprite.x=selectedsprite.width/2-iconsprite.width/2+1;			iconsprite.y=selectedsprite.height/2-iconsprite.height/2;			addChild(iconsprite);		}		public function changestate():void{			buttonstatus=!buttonstatus;			buttonstatus?selectedsprite.alpha=1:selectedsprite.alpha=0;		}	}	}