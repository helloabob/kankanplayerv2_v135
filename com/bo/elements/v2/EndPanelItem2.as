package com.bo.elements.v2 {	import flash.display.Sprite;	import flash.net.URLLoader;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.net.URLRequest;	import flash.display.Loader;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.net.navigateToURL;		public class EndPanelItem2 extends Sprite{				private var _back:Sprite=new EndPanelItemBack();		private var _mask:Sprite;		private var ld:Loader;		private var _obj:Object;		private var tf:TextFormat=new TextFormat();		public function EndPanelItem2(obj:Object) {			// constructor code			this._obj=obj;			addChild(_back);			_back.alpha=0;			ld=new Loader();			ld.contentLoaderInfo.addEventListener(Event.COMPLETE,oncomp);			ld.load(new URLRequest(this._obj.titlepic));			addChild(ld);						tf.size=15;			var txt:TextField=new TextField();			txt.setTextFormat(tf);			txt.defaultTextFormat=tf;			txt.multiline=true;			txt.wordWrap=true;			txt.textColor=0xffffff;			txt.selectable=false;			txt.text=this._obj.title;			txt.width=138;			txt.height=35;			txt.x=120;			txt.y=10;			addChild(txt);						tf.size=13;			var txt1:TextField=new TextField();			txt1.setTextFormat(tf);			txt1.defaultTextFormat=tf;			txt1.multiline=true;			txt1.wordWrap=true;			txt1.textColor=0x565656;			txt1.selectable=false;			txt1.text="更新时间:"+this._obj.pubtime;			txt1.width=138;			txt1.height=20;			txt1.x=120;			txt1.y=55;			addChild(txt1);						_mask=new Sprite();			_mask.graphics.beginFill(0xffffff,0);			_mask.graphics.drawRect(0,0,this.width,this.height);			_mask.graphics.endFill();			_mask.buttonMode=true;			_mask.addEventListener(MouseEvent.ROLL_OVER,onover);			_mask.addEventListener(MouseEvent.ROLL_OUT,onout);			_mask.addEventListener(MouseEvent.CLICK,onlink);			addChild(_mask);					}		private function onlink(evt:MouseEvent):void{			flash.net.navigateToURL(new URLRequest(this._obj.titleurl),"_blank");		}		private function onover(evt:MouseEvent):void{			_back.alpha=1;		}		private function onout(evt:MouseEvent):void{			_back.alpha=0;		}		private function oncomp(evt:Event):void{			ld.width=110;			ld.height=84;			ld.x=3;			ld.y=3;		}	}	}