package com.bo.utils {	import flash.net.URLLoader;	import flash.net.URLRequest;	import flash.external.ExternalInterface;		public class Statistics {		public static var url:String="http://oms.kankanews.com/oms/share/video_view_num.php";		private static var ld:URLLoader=new URLLoader();		public function Statistics() {		}		public static function postStatisticsInfo(stype:int,svalue:String):void{			var requesturl:String;			if(Global.playerparameter.islive=="true"){				requesturl=url+"?type="+stype+"&val="+svalue+"&t="+ int(Math.random() * 100000000);				trace(requesturl);				ld.load(new URLRequest(requesturl));			}else{				requesturl=url+"?omsid="+Global.omsid+"&type="+stype+"&val="+svalue+"&t="+ int(Math.random() * 100000000);				ld.load(new URLRequest(requesturl));			}		}		public static function callJsStatisticsInfo(val:String):void{			if(ExternalInterface.available){				ExternalInterface.call("onLiveError",val);			}		}	}}