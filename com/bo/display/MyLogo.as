package com.bo.display {	import flash.display.Sprite;	import flash.display.Loader;	import flash.net.URLRequest;	import flash.events.Event;	public class MyLogo extends Sprite{		private var ld:Loader=new Loader();		public function MyLogo(url:String){			//x=20;			//y=10;			//x=Global.playerparameter.logox;			//y=Global.playerparameter.logoy;			ld.load(new URLRequest(url));			ld.contentLoaderInfo.addEventListener(Event.COMPLETE,onCom);			Global._stage.addEventListener(Event.RESIZE,onStageResize);		}		private function reposition():void{			var nw:Number=Math.min(Global.appWidth,Global.appHeight*4/3);			var nh:Number=Math.min((Global.appHeight-32),Global.appWidth*3/4);			var nx:Number=nw/Global.initAppWidth*Global.playerparameter.logox;			var ny:Number=nw/Global.initAppWidth*Global.playerparameter.logoy;			trace("nx:"+nx+"ny:"+ny);			x=Global.appWidth/2-nw/2+nx;			y=(Global.appHeight-32)/2-nh/2+ny;						trace("x:"+x+"y:"+y);						ld.width=nw/Global.initAppWidth*Global.playerparameter.logowidth;			ld.height=nw/Global.initAppWidth*Global.playerparameter.logoheight;		}		private function onStageResize(evt:Event):void{			//ld.width=Global.appWidth/Global.initAppWidth*Global.playerparameter.logowidth;			//ld.height=Global.appWidth/Global.initAppWidth*Global.playerparameter.logoheight;			reposition();			//x=Global.mps.x+Global.playerparameter.logox/Global.initAppWidth*nw;			//x=Global.mps.y+Global.playerparameter.logoy/Global.initAppWidth*nw;						//trace("mps_y"+ny+":"+y);		}		private function onCom(evt:Event):void{			ld.contentLoaderInfo.removeEventListener(Event.COMPLETE,onCom);			reposition();			//ld.width=Global.playerparameter.logowidth;			//ld.height=Global.playerparameter.logoheight			addChild(ld);		}	}	}