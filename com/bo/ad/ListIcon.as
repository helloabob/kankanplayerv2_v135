package com.bo.ad {	import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.filters.DropShadowFilter;	import flash.events.Event;	public class ListIcon extends Sprite{		private var up:uint=0x666666;		private var down:uint=0xffcc00;		private var over:uint=0xffffff;		private var ds:DropShadowFilter=new DropShadowFilter();		var myindex:int;		public function ListIcon() {			// constructor code			addEventListener(MouseEvent.CLICK,onClick);			filters=[ds];			buttonMode=true;			alpha=0.8;			graphics.beginFill(up,1);			graphics.drawRect(0,0,10,10);			graphics.endFill();			this.addEventListener(MouseEvent.ROLL_OVER,onOver);			this.addEventListener(MouseEvent.ROLL_OUT,onOut);		}		private function onClick(evt:MouseEvent):void{			dispatchEvent(new Event("adchange",true));		}		public function select():void{			graphics.beginFill(down,1);			graphics.drawRect(0,0,10,10);			graphics.endFill();			this.removeEventListener(MouseEvent.ROLL_OVER,onOver);			this.removeEventListener(MouseEvent.ROLL_OUT,onOut);			removeEventListener(MouseEvent.CLICK,onClick);		}		public function unselect():void{			graphics.beginFill(up,1);			graphics.drawRect(0,0,10,10);			graphics.endFill();			this.addEventListener(MouseEvent.ROLL_OVER,onOver);			this.addEventListener(MouseEvent.ROLL_OUT,onOut);			addEventListener(MouseEvent.CLICK,onClick);		}		private function onOver(evt:MouseEvent):void{			graphics.beginFill(over,1);			graphics.drawRect(0,0,10,10);			graphics.endFill();		}		private function onOut(evt:MouseEvent):void{			graphics.beginFill(up,1);			graphics.drawRect(0,0,10,10);			graphics.endFill();		}	}	}