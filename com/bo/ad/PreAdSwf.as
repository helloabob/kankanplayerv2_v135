package com.bo.ad {	import flash.display.Loader;	import flash.events.Event;	import flash.net.URLRequest;		public class PreAdSwf extends PreAdBase{		private var ld:Loader;		public function PreAdSwf() {			// constructor code		}		public override function initAndPlay():void{			var xml:XML=Global.adParameter.adxml.chan[0];			duration=5;			ld=new Loader();			ld.contentLoaderInfo.addEventListener(Event.COMPLETE,onComp);			ld.load(new URLRequest(xml.parts.part.s));		}		private function onComp(evt:Event):void{			ld.width=Global.appWidth*(ld.content.width/ld.contentLoaderInfo.width);			ld.height=(Global.appHeight-29)*(ld.content.height/ld.contentLoaderInfo.height);			addChild(ld);			showCount();		}	}	}