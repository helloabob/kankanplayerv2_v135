package com.bo.ad {	import flash.display.Sprite;	import flash.display.Loader;	import flash.display.SimpleButton;	import flash.events.Event;	import flash.events.IOErrorEvent;	import flash.net.URLRequest;	public class PauseAdBase extends Sprite{		private var ld:Loader;		private var clsbutton:SimpleButton;		private var nw:uint=300;		private var nh:uint=200;		public function PauseAdBase() {			trace('======================pause_ad_init======================');			ld=new Loader();			ld.contentLoaderInfo.addEventListener(Event.COMPLETE,oncomp);			ld.contentLoaderInfo.addEventListener(IOErrorEvent.IO_ERROR,onerror);			trace("????",Global.adParameter.adxml.chan[8].parts[0].s);			ld.load(new URLRequest(Global.adParameter.adxml.chan[8].parts.part[0].s));		}		public function set url(value:String):void{					}		private function oncomp(evt:Event):void{			ld.contentLoaderInfo.removeEventListener(Event.COMPLETE,oncomp);			ld.contentLoaderInfo.removeEventListener(IOErrorEvent.IO_ERROR,onerror);			ld.width=nw;			ld.height=nh;			x=Global.appWidth/2-ld.width/2;			y=Global.appHeight/2-ld.height/2-15;			addChild(ld);			clsbutton=new ClsButton();			clsbutton.x=nw-clsbutton.width-10;			clsbutton.y=2;			//addChild(clsbutton);			trace("==================pause_ad_complete====================");		}		private function onerror(evt:IOErrorEvent):void{			ld.contentLoaderInfo.removeEventListener(Event.COMPLETE,oncomp);			ld.contentLoaderInfo.removeEventListener(IOErrorEvent.IO_ERROR,onerror);		}		public function rearrange():void{			x=Global.appWidth/2-ld.width/2;			y=Global.appHeight/2-ld.height/2-15;		}		public function show():void{			if(!Global.main.contains(this))Global.main.addChild(this);			trace("===============pause_ad_show=================");		}		public function hide():void{			if(Global.main.contains(this))Global.main.removeChild(this);			trace("===============pause_ad_hide=================");		}	}	}